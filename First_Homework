print("Первое задание")
a=(input("Привет! Как тебя Зовут?"))

b=int(input("Сколько тебе лет?"))

c=(input("Что ты любишь больше пить по утрам чай или кофе?"))

print("Приятно познакомиться ",a,"! ",b," это замечательный возраст! ", "Надеюсь, что ", c , "дает тебе заряд энергии на весь день!")



print("Второе задание")
sek=int(input('Введите время в секундах'))
mun=0
hour=0
if (sek>=60):
    mun=sek//60
    sek=sek%60
if (mun>=60):
    hour=mun//60
    mun=mun%60
print(hour ,":" , mun ,":", sek)
print("Третье задание")
ran=(input("введите число"))
flat=int((ran)+(ran))
bed=int((ran)+(ran)+ran)
print(int(ran)+flat+bed)



print("Четвертое задание")
it=int(input("Введите число"))
g=1
t=0
while(it>0):
    t=it%10
    it=it//10
    if (t>g):
        g=t
print(g)


print("Пятое задание")
vyr=int(input("введите выручку компании"))
izder=int(input("введите издержки компании"))
if (vyr>izder):
    print("Это явно прибыльное дело")
    print("Рентабельность выручки", ((vyr - izder) / vyr))
    d=int(input("введите количество сотрудников в фирме"))
    print("прибыль фирмы в расчете на одного сотрудника", ((vyr - izder)/d) )
elif(vyr==izder):
    print("Ну ничего поднажмешь и все получится!")
else:
    print("Это явно убыточное дело")
print("Шестое задание")
e=int(input("Дистанчия в километрах пройденная в первый день"))
q=int(input("Общий планируемый результат за все дни"))
r=1
while (q>=e):
    e=e+(e*0.1)
    r=r+1
print("на", r ,"день спортсмен достиг результата — не менее", q, "км.")
